CC = gcc
SRC = main.c holberton.c
OBJ = $(patsubst %.c, %.o, $(SRC))
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic


all: $(OBJ)
	$(CC) $(CFLAG) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
